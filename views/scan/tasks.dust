<!DOCTYPE html>
<html lang="zh">

<head>
    {>"layouts/baseMeta" /} {>"layouts/baseCss" /}

    <title>{stdRes.title}</title>

</head>

<body>
    {>"layouts/nav" /}

    <div class="container">
        <br/>
        <div class="row">
            <div class="col-lg-12">
                {#stdRes.data}
                <div id="block_{_id}" class="col-lg-3" data-toggle="tooltip" data-placement="bottom" title="task note : {note}">
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <p class="float-right">
                            <a href="javascript:deleteTaskById('{_id}')" title="删除task" class="close"><small class="glyphicon glyphicon-remove"></small></a>
                        </p>
                        <strong><a href="#">{name}</a></strong>
                        <br/>
                        <p>
                            {@formatTime data=time formatString="yyyy-MM-dd HH:mm:ss"}{/formatTime}
                        </p>
                    </div>
                </div>{~n} {/stdRes.data}
            </div>
        </div>
    </div>




    {>"layouts/baseJavascript" /} {>"layouts/basePlugin" /}
    <script type="text/javascript">
        $(function() {
            $('[data-toggle="tooltip"]').tooltip()
        });

        function deleteTaskById(id) {
            $.get("/scan/deleteTaskById/" + id, function(data) {
                if (data.err) {
                    console.log(data.message);
                } else {
                    $("#block_" + id).hide(150, function() {
                        $(this).remove();
                    });
                }
            });
        }

    </script>
</body>

</html>
