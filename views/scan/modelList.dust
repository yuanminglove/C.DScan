<!DOCTYPE html>
<html lang="zh">

<head>
    {>"layouts/baseMeta" /} {>"layouts/baseCss" /}

    <title>{stdRes.title}</title>

</head>

<body>
    {>"layouts/nav" /}

    <div class="container">
        <br/>
        <div class="row">
            <form id="form1" action="/user/addToHostGroup" method="POST">
                <div class="col-lg-12">
                    <table id="selectAll_" class="table table-hover">
                        <thead>
                            <tr>
                                <th width="300px">name</th>
                                <th width="500px">note</th>
                                <th width="200px" class="text-right">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            {#stdRes.data}
                            <tr>
                                <td class="hover-pointer" data-toggle="collapse" href="#{_id}" onclick="getNoteById('{_id}')" aria-expanded="false" aria-controls="{_id}">{name}</td>
                                <td>{@substr data="{note}" start="0" len="4"}{/substr}</td>
                                <td></td>
                            </tr>
                            <tr class="collapse" id="{_id}">
                                <td colspan="3">
                                    <p class="col-lg-12">{code}</p>
                                </td>
                            </tr>
                            {~n} {/stdRes.data}
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>




    {>"layouts/baseJavascript" /} {>"layouts/basePlugin" /}

    <script type="text/javascript">
        $(function() {
            $('[data-toggle="tooltip"]').tooltip()
        });

    </script>
</body>

</html>
